.imagepicker {
  width: 100%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
}
.imagepicker-view{
  width: 100%;
  margin: 0;
  padding: 0;
}

.imagepicker-item{
  margin: 0;
  display:flex;
  align-items:center;
  justify-content: center;
}

.imagepicker-modal{
  z-index:100;
}
.imagepicker-item-img{
  width: 90%;
  height: 90%;
  padding: 5%;
}

.imagepicker-add-icon{
  position: relative;
  box-sizing: border-box;
  width: 65%;
  height: 65%;
  border: 4rpx dashed #9a9ba3;
  border-radius: 50%;
}
.imagepicker-add-icon:before{
  content: '';
  position: absolute;
  width: 60%;
  height: 4rpx;
  left: 50%;
  top: 50%;
  margin-left: -30%;
  margin-top: -2rpx;
  background-color: #aaabb2;
}
.imagepicker-add-icon:after{
  content: '';
  position: absolute;
  width: 4rpx;
  height: 60%;
  left: 50%;
  top: 50%;
  margin-left: -2rpx;
  margin-top: -30%;
  background-color: #aaabb2;
}