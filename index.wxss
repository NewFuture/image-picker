:host {
    width: 100%;
}

.ImagePicker {
    width: 100%;
    display: flex;
    box-sizing: border-box;
    padding: 0;
    background-color: rgba(0, 0, 0, 0);
    margin: auto;
}

.ImagePicker-item {
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 关闭按钮 */

.ImagePicker-itemClose {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    right: 5%;
    top: 5%;
    padding: 0;
    margin: 0;
    border: none;
    line-height: 0;
    font-size: 0;
    border-radius: 0;
    background-color: rgba(51, 51, 51, 0.5);
    box-sizing: content-box;
    /* border: 10rpx solid transparent; 增加点击区域 */
}

.ImagePicker-itemClose::after {
    border-radius: 0;
}

.ImagePicker-itemClose::before {
    width: 34rpx;
    height: 34rpx;
    color: #fff;
    font-size: 40rpx;
    content: "\D7";
    position: absolute;
    left: 2rpx;
    top: 13rpx;
}

.ImagePicker-itemImg {
    width: 90%;
    height: 90%;
    border: 1rpx solid #ccc;
}

/** 移动时的样式 **/

.ImagePicker-item.is-moving .ImagePicker-item.is-deleting {
    z-index: 1000;
}

/* hack for movable-view：不能css控制movable-view的缩放，改为缩放子元素 */

.is-moving .ImagePicker-itemImg {
    opacity: 0.8;
    width: 100%;
    height: 100%;
}

/** 删除样式 **/

.is-deleting .ImagePicker-itemImg {
    box-sizing: border-box;
    border: red solid 3px;
    width: 99%;
    height: 99%;
}

/** 激活状态样式 **/

.is-active .ImagePicker-itemImg {
    width: 95%;
    height: 95%;
}

.ImagePicker-addIcon {
    position: relative;
    box-sizing: border-box;
    width: 90%;
    height: 90%;
    border: 1rpx solid #ccc;
}

.ImagePicker-addIcon:before {
    content: '';
    position: absolute;
    width: 50%;
    height: 8rpx;
    left: 50%;
    top: 50%;
    margin-left: -25%;
    margin-top: -4rpx;
    background-color: #ccc;
    border-radius: 6rpx;
}

.ImagePicker-addIcon:after {
    content: '';
    position: absolute;
    width: 8rpx;
    height: 50%;
    left: 50%;
    top: 50%;
    margin-left: -4rpx;
    margin-top: -25%;
    background-color: #ccc;
    border-radius: 6rpx;
}