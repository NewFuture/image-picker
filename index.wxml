<view class='imagepicker' style="width:{{width}}px;">
  <movable-area class="imagepicker-view" style='height:{{col*length}}px'>
    <movable-view class='imagepicker-item'
     wx:for="{{imgList}}" wx:key="index" 
     style="width:{{length}}px;height:{{length}}px;z-index:{{item.zIndex}};"
     x="{{item.x}}" y="{{item.y}}" direction="all" 
     bind:change="onChange" bind:touchstart="onTouchStart" bind:touchend='onTouchEnd' 
     catch:longpress="onDel" catch:tap="onTap"
     data-id="{{index}}">
      <image src='{{value[item.index].path}}' class='imagepicker-item-img' mode='aspectFill'/>
    </movable-view>
    <!-- <movable-view class='imagepicker-item' wx:for="{{imgList}}" wx:key="imgList" style="width:{{length}}px;height:{{length}}px;" x="{{item.x}}" y="{{item.y}}" direction="all">
      <image class='imagepicker-item-img' mode='aspectFill' hidden="{{movingIndex==index}}" src='{{value[index].path}}' />
    </movable-view> -->
