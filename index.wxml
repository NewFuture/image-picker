     style="width:{{length}}px;height:{{length}}px;" 
     animation="{{false}}" x="{{item.x}}" y="{{item.y}}" direction="all"
     bind:change="onChange" bind:touchstart="onTouchStart" bind:touchend='onTouchEnd' bind:longpress="onDel" data-id="{{index}}">
      <image class='imagepicker-item-img' mode='aspectFill' hidden="{{movingIndex!=index}}" src='{{value[index].path}}' />
    </movable-view> -->
    <movable-view class='imagepicker-item' direction="all" animation="{{false}}" disabled="{{true}}" style="width:{{length}}px;height:{{length}}px;" x="{{chooseImgX}}" y="{{chooseImgY}}" hidden="{{imgList.length >= max}}" bind:tap="onChooseImage">
      <view class="imagepicker-add-icon"></view>
    </movable-view>
  </movable-area>
</view>
